.zm-main-item{display:flex;flex-direction:row;margin:10px;background-color:white;box-shadow:0 2px 12px 0 rgba(0,0,0,0.1);border-radius:10px 300px 300px 10px;box-shadow:inset 0 2px 12px 0 rgba(0,0,0,0.1);border:1px solid #e6ebf5}.zm-main-item text{font-size:12px}.zm-text{padding:1px 2px;border-radius:5px;margin-right:10px;color:white}.heartbeating{animation:pulse 3s ease infinite alternate}@keyframes pulse{0%{background-color:white}100%{background-color:#f9444d}}.navigating{animation:move 1s linear 4 alternate}@keyframes move{0%{transform:translate(0, 0)}100%{transform:translate(30px, 0)}}.floatingBtn{position:fixed;right:20px;bottom:50px;width:60px;height:60px;background:#FA6570;border-radius:50%;text-align:center;box-shadow:0 2px 3px rgba(0,0,0,0.4);transition:all 150ms ease;z-index:100;display:flex;justify-content:center;align-items:center;color:white}.secondBtn{bottom:120px}